= form_tag charges_path do
  %article
    - if flash[:error].present?
      #error_explanation
        %p= flash[:error]
    %label.amount
      %span
        Amount: #{@amount}
  %script.stripe-button{"data-amount" => "#{@amount}", "data-currency" => "dkk", "data-description" => "#{@description}", "data-key" => "#{Rails.configuration.stripe[:publishable_key]}", "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}
%h4= pretty_amount_helper @amount
