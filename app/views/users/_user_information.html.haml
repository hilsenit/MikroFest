.user-information.tabs-divs{class: tabs_open_helper(tabs_param: params[:profile], tab_id: "user-information", active_class: "d-block", inactive_class: "d-none", default_tab: true)}
  .tile
    .tile-icon
      .example-tile-icon
        %i.icon.icon-file.centered
    .tile-content
      %p.tile-title= @user.full_name if @full_name.present?
      %p.tile-subtitle.text-gray Earth's Mightiest Heroes joined forces to take on threats that were too big for any one hero to tackle...
    .tile-action
      = link_to "Rediger", edit_user_path(@user.id), class: "btn btn-primary"
