<h3 class="text-center">Titler af <%= @publisher.name %></h3>
<%= link_to "&#8592; Tilbage til forlag".html_safe, publishers_path() %>

<% if @titles.any? %>
	<table>
		<th>Titel:</th>
		<th></th>
		<th></th>
		<th></th>
			<% @titles.each do |tit| %>
		<tr>
				<td><%= tit.title %></td>
				<td><%= link_to "Vis", one_title_path(tit.publisher.id, tit.id), class: "button" %></td>
				<td><%= link_to "Rediger", edit_publisher_title_path(tit.publisher.id, tit.id), class: "button" %>
				<td><%= link_to "Slet", publisher_title_path(tit.publisher.id, tit.id), method: :delete, data: {confirm: "Er du sikker pÃ¥, at du vil slette #{tit.title}?"}, class: "button" %>
		</tr>
			<% end %>
	</table>
<% else %>
	<p class="text-center">
		Ingen titler er blevet oprettet endnu for <%= @publisher.name %>
	</p>
<% end %>
<%= link_to "Opret ny titel", new_publisher_title_path(@publisher.id), class: "button button-primary" %>

