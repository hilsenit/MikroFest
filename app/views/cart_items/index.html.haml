  %h2.text-center Din kurv
  %ul.product-detail-list
    = render partial: 'cart_items/item', collection: @cart_items
  %h6.text-right Samlet pris: #{pretty_amount_helper(@cart.get_full_price)}
  = link_to "GÃ¥ til Checkout &#8594;".html_safe, checkout_path(), class: "btn btn-primary go-to-checkout-btn float-right" if @cart_items.any?

